@page "/newbudgetlineitem"
@inject NavigationManager NavManager
@using Cheddar.Client.ViewModels
@inject BudgetLineItemVM BudgetLineViewModel
@inject BudgetVM budget

<PageTitle>New Budget Line Item</PageTitle>

<div class="row px-3">
    <div class="col-md-6 col-lg-4 p-3">
        <RadzenCard>
            <h4 class="mb-4">Budget Line Item Name</h4>
            <RadzenTextBox Placeholder="Apple Music" @bind-Value="@BudgetLineViewModel.bliModel.BudgetLineName" />
        </RadzenCard>
    </div>
    <div class="col-md-6 col-lg-4 p-3">
        <RadzenCard>
            <h4 class="mb-4">Monthly Cost</h4>
            <RadzenNumeric TValue="double" Placeholder="14.99" @bind-Value="@BudgetLineViewModel.bliModel.Cost" />
        </RadzenCard>
    </div>
    <div class="col-md-6 col-lg-4 col-xl-3 p-3">
        <RadzenCard>
            <h4 class="mb-4">Category</h4>
            <RadzenDropDown Class="w-100" 
                            Data=@itemCategories @bind-Value="@BudgetLineViewModel.bliModel.Category"/>
        </RadzenCard>
    </div>
    <div class="col-md-6 col-lg-4 col-xl-3 p-3">
        <RadzenCard>
            <h4 class="mb-4">Payment Methods</h4>
            <RadzenDropDown AllowClear="true" Class="w-100" 
                            Data=@paymentMethods @bind-Value="@BudgetLineViewModel.bliModel.PaymentMethod"/>
        </RadzenCard>
    </div>
    <div class="col-lg-6 col-xl-4 p-3">
        <RadzenCard>
            <h4 class="mb-4">Contract End Date</h4>
            <RadzenDatePicker DateFormat="d" @bind-Value="@BudgetLineViewModel.bliModel.ContractEndDate" />
        </RadzenCard>
    </div>
    <RadzenButton class="col-xl-3" Click="@SubmitNewBudgetItem" Text="Submit" ButtonStyle="ButtonStyle.Primary"></RadzenButton>
</div>


@code {
    List<string> paymentMethods = new List<string>() { "American Express", "Paypal", "Lloyds", "Starling" };
    List<string> itemCategories = new List<string>() { "Business", "Debt", "Entertainment", "Health", "Remaining", "Utility" };

    protected override void OnInitialized() {

    }

    public void SubmitNewBudgetItem() {
        budget.AddItemsToContainerAsync(BudgetLineViewModel.bliModel);
        NavManager.NavigateTo("/budget");
    }
}